/* ====== HEADER ====== */
header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #0D0D0D;
  color: white;
  font-family: 'Lato', sans-serif;
  font-size: 0.8rem;
  z-index: 1000;
  box-shadow: 0 2px 5px rgba(0,0,0,0.3);
  display: flex;
  flex-direction: column;
  height: 105px;
  padding: 0;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 10px 20px;
  box-sizing: border-box;
}

.search-box {
  display: flex;
  max-width: 400px;
  width: 100%;
  border-radius: 0px;
  overflow: hidden;
  background-color: #0D0D0D;
  border-bottom: 2px solid rgb(0, 0, 0);
  margin-left: 20px;
}

.search-box input {
  flex: 1;
  padding: 12px 16px;
  border: none;
  outline: none;
  font-size: 16px;
  color: white;
  background-color: #0D0D0D;
}

.search-box button {
  background: #0D0D0D;
  color: rgb(73, 51, 39);
  border: none;
  padding: 0 18px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.search-box button:hover {
  background: #372100;
}

.promo-text {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  color: white;
  font-size: 1rem;
  text-align: center;
  flex-grow: 1;
}

.logo {
  height: 90px;
  width: auto;
  cursor: pointer;
}

.logandmen {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  margin-top: 140px;
  margin-bottom: 25px;
  gap: 150px;
}

.menusizquierda,
.menusderecha {
  display: flex;
  gap: 60px;
  justify-content: center;
}

.logo-container {
  display: flex;
  justify-content: center;
  align-items: center;
}

.logobody {
  height: 300px;
  width: auto;
  cursor: pointer;
}

/* Dropdown */
.dropdown {
  position: relative;
}

.dropbtn {
  background-color: #61393900;
  color: rgb(255, 255, 255);
  padding: 10px 15px;
  font-family: 'Oswald', sans-serif;
  font-size: 1rem;
  border: none;
  cursor: pointer;
  border-radius: 4px;
}

.dropdown-content {
  display: none;
  position: absolute;
  background-color: #000000;
  min-width: 160px;
  box-shadow: 0 8px 16px rgba(0,0,0,0.2);
  border-radius: 4px;
  z-index: 1000;
  top: 100%;
  left: 0;
}

.dropdown-content a {
  color: rgb(255, 255, 255);
  padding: 10px 15px;
  text-decoration: none;
  display: block;
}

.dropdown-content a:hover {
  background-color: #5d5b5b;
}

.dropdown:hover .dropdown-content {
  display: block;
}

.dropdown:hover .dropbtn {
  border-bottom: 3px solid rgb(61, 31, 0);
  background-color: #33333300;
}

/* ====== MAIN ====== */
main {
  margin-top: 125px;
  padding: 0;
  font-family: 'Lato', sans-serif;
  line-height: 1.5;
  min-height: 150vh;
}

h1 {
  font-family: 'Playfair Display', serif;
  font-size: 2.5rem;
  text-align: center;
  margin: 120px 0 0 0;
  padding: 14px 0;
  background-color: lab(26.87% 5.63 11.67);
  color: white;
}

p {
  color: aliceblue;
  font-family: 'Lato', sans-serif;
  font-style: oblique;
}

body {
  width: 100%;
  height: 100vh;
  font-family: 'Lato', sans-serif;
  font-size: 16px;
  background: linear-gradient(to right, #352620, #331f0e);
  color: #000000;
  line-height: 1.6;
  margin: 0;
  padding: 0;
}

.imgin {
  margin: 0;
  padding: 0;
  width: 100%;
  background-color: #0D0D0D;
}

.imgpresents {
  width: 100%;
  cursor: pointer;
  display: block;
  margin: 0;
  padding: 0;
}

.carousel-container {
  position: relative;
  width: 100%;
  max-width: 1000px;
  margin: auto;
  overflow: hidden;
  border-radius: 10px;
}

.carousel-slide {
  display: flex;
  transition: transform 0.5s ease-in-out;
}

.carousel-slide img {
  width: 100%;
  flex-shrink: 0;
}

/* Botones */
.prev, .next {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: rgba(0,0,0,0.5);
  color: white;
  border: none;
  padding: 10px;
  cursor: pointer;
  font-size: 18px;
}

.prev { left: 10px; }
.next { right: 10px; }

.prev:hover, .next:hover {
  background-color: rgba(0,0,0,0.8);
}

/* Productos */
.productos {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
  padding: 40px;
  background-color: #0d0d0d62;
}

.producto {
  background: rgb(49, 40, 40);
  border-radius: 8px;
  padding: 15px;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.producto:hover {
  transform: translateY(-10px);
  box-shadow: 0 6px 16px rgba(0,0,0,1);
}

.producto img {
  max-width: 100%;
  height: auto;
  border-radius: 6px;
}

.precio {
  font-size: 1.2rem;
  font-weight: bold;
  color: #e91e63;
  margin: 10px 0;
}

.btn-comprar {
  background: #0D0D0D;
  color: white;
  border: none;
  padding: 10px 15px;
  cursor: pointer;
  margin-top: 10px;
  border-radius: 4px;
  font-size: 1rem;
}

.btn-comprar:hover {
  background: #333;
  transform: translateY(4px);
}

/* Footer */
.footer {
  background-color: #0D0D0D;
  color: white;
  padding: 40px 20px 20px;
  font-family: 'Lato', sans-serif;
}

.footer-container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  max-width: 1200px;
  margin: auto;
}

.footer-section h3 {
  font-size: 1.2rem;
  margin-bottom: 10px;
  color: #f5a623;
}

.footer-section p,
.footer-section a {
  color: #ccc;
  font-size: 0.9rem;
  text-decoration: none;
}

.footer-section a:hover {
  color: #fff;
  text-decoration: underline;
}

.footer-bottom {
  text-align: center;
  font-size: 0.8rem;
  padding-top: 20px;
  border-top: 1px solid #333;
}

/* ====== RESPONSIVE ====== */
@media (max-width: 1200px) {
  .logandmen {
    gap: 80px;
    margin-top: 120px;
  }

  .menusizquierda,
  .menusderecha {
    gap: 30px;
  }

  .search-box {
    max-width: 300px;
  }
}

@media (max-width: 992px) {
  .logandmen {
    grid-template-columns: 1fr auto 1fr;
    gap: 40px;
    margin-top: 110px;
  }

  .promo-text {
    font-size: 0.9rem;
  }

  h1 {
    font-size: 2rem;
    margin: 100px 0 0 0;
  }

  .productos {
    grid-template-columns: repeat(2, 1fr);
    padding: 20px;
  }

  .search-box {
    max-width: 250px;
    margin-left: 10px;
  }
}

@media (max-width: 768px) {
  header {
    height: auto;
  }

  .top-bar {
    flex-direction: column;
    align-items: flex-start;
  }

  .promo-text {
    position: relative;
    left: auto;
    transform: none;
    text-align: center;
    margin: 10px 0;
  }

  .logandmen {
    grid-template-columns: 1fr;
    gap: 20px;
    margin-top: 100px;
  }

  .menusizquierda,
  .menusderecha {
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }
}

@media (max-width: 480px) {
  .productos {
    grid-template-columns: 1fr;
    padding: 10px;
  }

  h1 {
    font-size: 1.5rem;
  }

  .search-box {
    width: 100%;
    margin-left: 0;
  }

  .dropbtn {
    font-size: 0.9rem;
    padding: 8px 10px;
  }
}

//scripts
async function cargarProductos() {
  try {
    const respuesta = await fetch("Catalogo.json");
    const productos = await respuesta.json();

    const catalogo = document.getElementById("catalogo");
    catalogo.innerHTML = "";

    productos.forEach(p => {
      const card = document.createElement("div");
      card.classList.add("producto");

      card.innerHTML = `
        <img src="${p.imagen}" alt="${p.nombre}">
        <h3>${p.nombre}</h3>
        <p>${p.descripcion}</p>
        <span class="precio">$${p.precio}</span>
      `;

      catalogo.appendChild(card);
    });
  } catch (error) {
    console.error("Error cargando productos:", error);
  }
}






function buscarTexto() {
  let texto = document.getElementById("buscar").value.toLowerCase();
  let contenido = document.body.innerText.toLowerCase();

  if (texto && contenido.includes(texto)) {
    alert(`Se encontró "${texto}" en la página.`);
  } else {
    alert(`No se encontró "${texto}" en la página.`);
  }
}
const slide = document.querySelector('.carousel-slide');
const images = document.querySelectorAll('.carousel-slide img');
const prevBtn = document.querySelector('.prev');
const nextBtn = document.querySelector('.next');

let index = 0;

function showSlide(i) {
  if (i >= images.length) index = 0;
  if (i < 0) index = images.length - 1;
  slide.style.transform = `translateX(${-index * 100}%)`;
}

nextBtn.addEventListener('click', () => {
  index++;
  showSlide(index);
});

prevBtn.addEventListener('click', () => {
  index--;
  showSlide(index);
});

// Carrusel automático cada 4 segundos
setInterval(() => {
  index++;
  showSlide(index);
}, 4000)
cargarProductos();